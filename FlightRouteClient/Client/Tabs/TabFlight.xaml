<UserControl x:Class="Client.Tabs.TabFlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="790" Height="590">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">

        <DataGrid x:Name="dgFlights" HorizontalAlignment="Left" Margin="20,55,0,0" VerticalAlignment="Top" Height="463" Width="465" SelectionChanged="dgFlights_SelectionChanged" SelectionMode="Single"/>

        <Grid x:Name="gFlightsRight" HorizontalAlignment="Left" Height="523" Margin="490,48,0,-10" VerticalAlignment="Top" Width="300">
            <ContentControl x:Name="contentControl" VerticalAlignment="Top" />
        </Grid>
        <DatePicker x:Name="DatePickerFlightGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" Width="465" SelectedDateChanged="DatePickerFlightGrid_SelectedDateChanged"/>
        <ContentControl x:Name="ContentControlActionBar" Content="asd" HorizontalAlignment="Left" Margin="20,34,0,0" VerticalAlignment="Top" Width="465" Height="18"/>

    </Grid>
</UserControl>
