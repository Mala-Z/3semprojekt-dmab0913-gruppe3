<UserControl x:Class="Client.Helpers.DisplayError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="254">
    <Border BorderBrush="#CC0033" BorderThickness="2">
        <Grid>
            <Label x:Name="lblErrorMsg" Content="Text!" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="55,0,0,-2" Width="199" Foreground="#CC0033" FontSize="16" FontWeight="Bold" />
            <Image Source="img/error.png" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Margin="0,0,0,0"/>
        </Grid>
    </Border>
</UserControl>
